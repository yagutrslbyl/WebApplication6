@model WebApplication6.Models.Slider

@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Create Slider</h1>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="NameInput">Name</label>
            <input asp-for="Name" type=" text" class="form-control" id="NameInput" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="DescriptionInput">Description</label>
            <input asp-for="Description" type=" text" class="form-control" id="DescriptionInput"
                   placeholder="Enter Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ImageInput">Image</label>
            <input asp-for="ImageFile" type="file" class="form-control" id="ImageInput" placeholder="Enter Image">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>